  "extendsJavaType": "org.apache.streams.pojo.json.ActivityObject",
  "description": "collection of profiles and posts with the same actor",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "http://schemata.peoplepattern.com/ProfileBundle.json"
    },
    "profiles": {
      "description": "collection of profiles with the same actor",
      "type": "object",
      "extendsJavaType": "org.apache.streams.pojo.json.Collection"
    },
    "posts": {
      "description": "collection of posts with the same actor",
      "type": "object",
      "extendsJavaType": "org.apache.streams.pojo.json.Collection"
    }
  }
}
